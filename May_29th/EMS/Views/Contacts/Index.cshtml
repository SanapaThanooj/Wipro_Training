@model IEnumerable<EmployeeManagementSystem.Models.Contact>
@{
    ViewData["Title"] = "Contact";
    Layout = "_Layout";
}

<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

   
    .portal-container {
        margin: 0;
        padding: 0;
    }

    .portal-wrapper {
        display: flex;
        min-height: calc(100vh - 56px);
        background: #f7f8fa;
    }


    /* Form card */
    .form-wrapper {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 100px 50px;
    }

    .contact-card {
        background: #ffffff;
        width: 100%;
        max-width: 6000px;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.05);
    }

        .contact-card h2 {
            margin-bottom: 20px;
            color: #333;
            font-size: 1.8em;
            border-bottom: 2px solid ;
            padding-bottom: 10px;
        }

        .contact-card label {
            display: block;
            margin-top: 15px;
            margin-bottom: 5px;
            color: #555;
            font-weight: 500;
        }

        .contact-card input,
        .contact-card textarea {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 1em;
            transition: border-color 0.2s;
            font-family: inherit;
        }

            .contact-card input:focus,
            .contact-card textarea:focus {
                
                outline: none;
            }

        .contact-card textarea {
            resize: vertical;
            min-height: 120px;
        }

        .contact-card button {
            margin-top: 20px;
            background: linear-gradient(90deg, #ff9671, #ff6f61);
            border: none;
            color: white;
            padding: 12px 25px;
            font-size: 1em;
            font-weight: 600;
            border-radius: 30px;
            cursor: pointer;
            transition: opacity 0.2s;
        }

            .contact-card button:hover {
                opacity: 0.9;
            }

    /* Footer */
    .portal-footer {
        background: #f0f0f0;
        text-align: center;
        padding: 15px;
        font-size: 0.9em;
        color: #666;
    }
</style>


<div class="card shadow border-0">
    <div class="card-body">
        <h2 class="card-title text-primary mb-4">All Contacts</h2>
                    <p>
                        <a class="btn btn-primary" asp-action="Create">Create New</a>
                    </p>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                                <th>@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Subject)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Message)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.FullName)</td>
                                    <td>@Html.DisplayFor(m => item.Email)</td>
                                    <td>@Html.DisplayFor(m => item.PhoneNumber)</td>
                                    <td>@Html.DisplayFor(m => item.Subject)</td>
                                    <td>@Html.DisplayFor(m => item.Message)</td>
                                    <td>
                                        <a class="btn btn-sm btn-danger" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a class="btn btn-sm btn-danger" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="portal-footer">
                &copy; @DateTime.Now.Year - Employee Management System
            </div>
        </div>
    </div>
</div>
